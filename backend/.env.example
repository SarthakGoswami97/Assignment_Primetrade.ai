# ===========================================
# Primetrade.ai Task Manager - Backend Config
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
# Local: mongodb://localhost:27017/primetrade-app
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/primetrade-app
MONGODB_URI=mongodb://localhost:27017/primetrade-app

# JWT Configuration
# IMPORTANT: Generate a strong secret for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
